.banner-img{display:block;width:100%;height:574rpx}
.detail-info{padding:40rpx 32rpx 56rpx}
.detail-info .detail-price{font-weight:700;font-size:40rpx;color:#FF555F;line-height:40rpx;margin-bottom:24rpx}
.detail-info .detail-title{font-weight:700;font-size:40rpx;color:#181C28;line-height:60rpx;margin-bottom:24rpx}
.detail-info .detail-desc{font-size:28rpx;color:#7F8593;line-height:42rpx}
.detail-operate{text-align:center;padding:0 0 56rpx}
.detail-operate icon{display:inline-block;vertical-align:top;margin-bottom:16rpx}
.detail-operate view{font-size:26rpx;color:#7F8593;line-height:26rpx}
.detail-guide{line-height:88rpx;font-size:32rpx;color:#181C28;font-weight:700;margin-bottom:8rpx}
.detail-chapter{padding:0 32rpx 56rpx}
.detail-chapter .chapter-item{height:96rpx;background:#F4F4F6;border-radius:8rpx;padding:0 28rpx 0 32rpx;font-size:26rpx;color:#7F8593}
.detail-chapter .chapter-item:not(:last-child){margin-bottom:8rpx}
.detail-comment{padding:0 32rpx 56rpx}
.detail-comment .comment-item:not(:last-child){padding-bottom:48rpx}
.detail-comment .comment-item .user-avatar{width:48rpx;height:48rpx;margin-right:16rpx}
.detail-comment .comment-item .user-avatar image{width:100%;height:100%;border-radius:50%}
.detail-comment .comment-item .comment-time,.detail-comment .comment-item .user-name{font-size:30rpx;color:#B2B4BE;line-height:48rpx}
.detail-comment .comment-item .comment-time{font-size:24rpx}
.detail-comment .comment-item .comment-desc{margin-top:16rpx;font-size:26rpx;color:#181C28;line-height:40rpx}
.detail-comment .comment-item .reply-item{margin-top:48rpx}
.detail-footer{padding:32rpx;text-align:center}
.detail-footer .comment-btn{width:96rpx;height:96rpx;margin-right:16rpx}
.detail-footer .comment-btn icon{width:48rpx;height:48rpx}
.detail-footer .operate-group{border-radius:12rpx;overflow:hidden}
.detail-footer .operate-item{background:#4A4C50;height:96rpx;padding:18rpx 0 16rpx;color:#fff;line-height:1}
.detail-footer .operate-item strong{display:block;font-size:30rpx;margin-bottom:8rpx}
.detail-footer .operate-item view{font-size:24rpx}
.detail-footer .btn-blue{background:#4283F4}