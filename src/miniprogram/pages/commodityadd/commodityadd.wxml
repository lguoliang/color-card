<!--pages/commodityadd/commodityadd.wxml-->
<view class="commodity-add">
  <view class="info-item weui-cell weui-cell_access">
    <label>商品类型</label>
    <view class="weui-cell__bd">
      <picker bindchange="typeSel" value="{{ typeIndex }}" range="{{ typeList }}">
        <view class="{{ typeValue?'':'com-placeholder' }}">{{ typeValue?typeValue:'请选择' }}</view>
      </picker>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
  <view class="info-item weui-cell">
    <label>商品名称</label>
    <view class="weui-cell__bd">
      <input placeholder="商品名称" placeholder-class="com-placeholder" />
    </view>
  </view>
  <view class="info-item">
    <view class="info-item-tip">商品简介</view>
    <view class="textarea-item">
      <textarea placeholder="商品简介" placeholder-class="com-placeholder" ></textarea>
    </view>
  </view>
  <view class="info-item">
    <view class="info-item-tip">点击添加产品主图</view>
    <view class="upload-img">
      <view class="upload-btn"></view>
    </view>
  </view>
  <view class="info-item">
    <view class="info-item-tip">点击添加图片</view>
    <view class="upload-img">
      <view class="upload-item" wx:for="{{ imgList }}" wx:key="unique" data-url="{{ item }}"catchtap="previewImg">
        <view class="delete-btn" catchtap="deleteImg" data-index="{{ index }}"></view>
        <image mode="aspectFill" src="{{ item }}"></image>
      </view>
      <view class="upload-btn" bindtap="uploadImg" wx:if="{{ max > 0 }}"></view>
    </view>
  </view>
  <view class="info-item">
    <view class="info-item-tip">商品价格</view>
    <view class="exchange-group weui-cell">
      <!-- <label>积分兑换</label> -->
      <picker bindchange="exchangeSel" value="{{ exchangeIndex }}" range="{{ exchangeList }}">
        <view>{{ exchangeMode }}</view>
      </picker>
      <view class="weui-cell__bd">
        <view class="exchange-type" wx:if="{{ exchangeIndex == 0 || exchangeIndex == 2 }}">
          <input placeholder-class="com-placeholder" />
          <text class="com-placeholder">输入兑换积分</text>
        </view>
        <view class="exchange-type" wx:if="{{ exchangeIndex == 1 || exchangeIndex == 2 }}">
          <input placeholder-class="com-placeholder" />
          <text class="com-placeholder">输入兑换价格</text>
        </view>
      </view>
    </view>
  </view>
  <view class="info-item weui-cell">
    <label>商品价格</label>
    <view class="weui-cell__bd">
      <input placeholder="输入兑换积分" placeholder-class="com-placeholder" />
    </view>
  </view>
  <view class="info-item weui-cell">
    <label>商品库存</label>
    <view class="weui-cell__bd">
      <input placeholder="输入数量" placeholder-class="com-placeholder" />
    </view>
  </view>
  <view class="operate-group">
    <view class="operate-btn btn-blue" bindtap="saveEvent">保存到未上架</view>
    <view class="operate-btn" bindtap="saveEvent">保存草稿箱</view>
  </view>
</view>