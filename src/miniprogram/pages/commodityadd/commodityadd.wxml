<!--pages/commodityadd/commodityadd.wxml-->
<view class="page commodity-add">
  <scroll-view scroll-y="{{true}}" class="section">
  <view class="info-item weui-cell">
    <label>是否新品</label>
    <view class="weui-cell__bd"><switch class="switch-item" checked="{{isNew}}" color="#81d8cf" bindchange="switchChange" /></view>
    <!-- <switch class="switch-item" checked color="#81d8cf" /> -->
  </view>
  <view class="info-item weui-cell weui-cell_access">
    <label>商品类型</label>
    <view class="weui-cell__bd">
      <picker bindchange="typeSel" value="{{ typeIndex }}" range="{{ typeSel }}">
        <view class="{{ prodType?'':'com-placeholder' }}">{{ prodType?typeSel[typeindex]:'请选择' }}</view>
      </picker>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
  <view class="info-item weui-cell">
    <label>商品编号</label>
    <view class="weui-cell__bd">
      <input placeholder="输入商品编号" placeholder-class="com-placeholder" value="{{prodNum}}" data-name="prodNum" bindinput="inputChange" />
    </view>
  </view>
  <view class="info-item">
    <view class="info-item-tip">商品简介</view>
    <view class="textarea-item">
      <textarea placeholder="商品简介" placeholder-class="com-placeholder" value="{{prodDesc}}" data-name="prodDesc" bindinput="inputChange" ></textarea>
    </view>
  </view>
  <view class="info-item">
    <view class="info-item-tip">点击添加图片</view>
    <view class="upload-img">
      <view class="upload-item" wx:for="{{ prodImg }}" wx:key="unique" data-url="{{ item }}"catchtap="previewImg">
        <view class="delete-btn" catchtap="deleteImg" data-index="{{ index }}"></view>
        <image mode="aspectFill" src="{{ item }}"></image>
      </view>
      <view class="upload-btn" bindtap="uploadImg" wx:if="{{ max > 0 }}"></view>
    </view>
  </view>
  </scroll-view>
  <view class="operate-group">
    <view class="operate-btn btn-blue" bindtap="saveEvent">保存</view>
  </view>
</view>